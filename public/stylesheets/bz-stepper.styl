.bz-stepper
  @extends .bz-relative

  .stepper-navs
    margin-bottom: 32px
    position relative
    .step
      display inline-block
      height 40px
      line-height 40px
      
    .marker
      bottom -4px
      height 4px
      left 0
      position absolute

  .stepper-tabs
    height inherit
    min-height 420px
    overflow hidden
    width inherit

    .step-tab
      @extends .bz-clearfix
      left -110vw
      opacity 0
      position absolute
      width 100%
      z-index -100

      &.active
        left 0
        opacity 1
        z-index 1000
