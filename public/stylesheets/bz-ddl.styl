.bz-ddlist
  @extend .bz-relative
  font-size: 1.3em
  display: inline-block
  vertical-align: middle
  margin: 8px 0
  padding: 0!important
  height: calc(2.3em + 4px)
  .bz-trigger
    @extend .bz-relative
    height: inherit
    font-size: 0.8em
    line-height: normal
    margin: 0!important
    padding: .7em 1.5em .7em .5em
    width: 100%
    .flag-icon
      @extend .bz-absolute
      right: 4px
      top: calc(50% - 8px)

  .bz-list
    @extend .bz-list-no-style
    @extend .bz-shadow-2
    opacity: 0
    top: calc(2.3em + 4px)
    left: 0
    position: absolute
    width: 100%
    max-height: 200px
    overflow: hidden
    overflow-y: auto
    background: #fff
    z-index: 999999
    transform-scaling(.25,0)
    -webkit-transition: all 400ms cubic-bezier(.4,0,.2,1)
    transition: all 400ms cubic-bezier(.4,0,.2,1)
    -webkit-animation: none!important
    animation: none!important
    -webkit-transform-origin: 50% 0!important
    transform-origin: 50% 0!important
    &.bz-on
      transform-scaling(1,1)
      opacity: 1
    .bz-list-item
      padding: 8px

  .bz-trigger:focus ~ .bz-list
    transform-scaling(1,1)
    opacity: 1