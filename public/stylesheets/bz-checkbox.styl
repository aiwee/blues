.bz-checkbox
  display: inline-block
  vertical-align: top
  margin-left: 10px
  line-height: 26px
  cursor: pointer
  position: relative

.bz-checkbox.fit
  margin: 13px 0

.bz-checkbox .text
  margin-left: 10px

.bz-checkbox:hover .inner
  transform-scaling(0.5)
  opacity: .5

.bz-checkbox input
  height: 0
  width: 0
  -moz-appearance: none
  -webkit-appearance: none

.bz-checkbox input:checked + .outer .inner
  transform-scaling(1)
  opacity: 1


.bz-checkbox input:checked + .outer
  border: 3px solid #163d74

.bz-checkbox input:focus + .outer .inner
  transform-scaling(1)
  opacity:0.5
  background-color: #163d74

.bz-checkbox input:focus:checked + .outer .inner
  transform-scaling(1)
  opacity: 1
  background-color: #163d74

.bz-checkbox .outer
  height: 20px
  width: 20px
  display: block
  float: left
  border: 3px solid #767676
  background-color: #fff
  margin-top: 3px

.bz-checkbox .inner
  transition: all 0.25s ease-in-out
  height: 10px
  width: 10px
  transform-scaling(0)
  display: block
  margin: 2px
  background-color: #46ad58
  opacity: 0

.bz-checkbox input:checked::after
  background: #163d74
  content: ''
  display: block
  position: absolute
  z-index: 100
  height: 0
  width: 0
  top: 9px
  left: 10px
  transform-translate(-50%, -50%)
  vendor(animation, click-wave 0.65s)
