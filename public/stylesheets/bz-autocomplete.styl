.bz-ac-box button
  position: absolute
  top: 0
  right: 0

.bz-ac .bz-suggestions
  background: #fff
  list-style-type: none
  max-height: 250px
  height: auto
  overflow-x: hidden
  overflow-y: auto
  margin: 0
  padding: 0
  left: 0
  top: calc(100% + 2px)
  min-width: 325px
  width: 100%
  z-index: 799999
  border: 1px solid #dcdedf
  border-top: none
  @extend .bz-absolute
  @extend .bz-transition

.bz-ac .bz-suggestions.hide
  height: 0
  display: none

.bz-ac .bz-suggestions li
  @extend .bz-cursor-pointer

.bz-ac .bz-suggestions li.highlight,
.bz-ac .bz-suggestions li:hover
  background: #f6f7f8

.bz-ac .bz-chip
  margin-top: calc(.7em - 2px)