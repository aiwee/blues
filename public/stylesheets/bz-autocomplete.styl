.bz-ac-box
  position: relative
  display: inline-block
  //@extend .bz-w-100p

.bz-ac
  border: none
  line-height: normal
  min-height: calc(2.3em + 4px)
  position relative
  padding 0
  margin 8px 0
  display flex
  flex-direction row
  flex-wrap wrap
  user-select none
  vertical-align middle
  width auto

.bz-ac input
  border none
  border-radius 0
  box-shadow none
  color: color-gray-darker
  //height:  calc(2.3em + 0)
  height max-content
  float none
  line-height: normal
  outline none
  padding calc(.7em + 2px) .5em calc(.3em + 1px) .5em
  min-width: 70px!important
  vertical-align middle
  -webkit-flex 1
  -ms-flex 1
  flex 1
  max-width 100%
  min-height 32px
  width auto
  transition(all 0.3s ease-out)

.bz-ac .bz-input
  margin 0

