.bz-badge,
.bz-badge.primary,
.bz-badge.positive,
.bz-badge.warning,
.bz-badge.negative
  position: relative
  display: inline-block

.bz-badge[data-badge]:after
  border-radius: 50%
  box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.15), 0 1px 7px 0 rgba(0, 0, 0, 0.13), 0 3px 1px -1px rgba(0, 0, 0, 0.3)
  content: attr(data-badge)
  height: 20px
  font-size: .7em
  font-weight: 500
  line-height: 20px
  position: absolute
  right: -10px
  text-align: center
  top: 5px
  width: 20px
  z-index: 10

for t in themes
  .bz-badge.{t}::after
    background-color: themes[t].fill
    color: themes[t].text

.bz-badge.inline[data-badge]::after
  right: 0
  top: -3px
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.15), 0 0 3px 1px rgba(0, 0, 0, 0.13), 0 0 4px 0px rgba(0, 0, 0, 0.7) inset

.bz-badge.inline,
.bz-badge.inline.primary,
.bz-badge.inline.positive,
.bz-badge.inline.warning,
.bz-badge.inline.negative
  height: 10px
  position: relative
  display: inline-block
  margin: 0 5px
  width: 20px