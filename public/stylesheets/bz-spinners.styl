.bz-spinner
  display: inline-block
  width: 50px
  height: 50px
  border: 3px solid color-gray
  border-top-color: color-gray-dark
  border-radius: 50%
  vendor(animation, bz-circle 1.8s cubic-bezier(.05, 0, .13, .9) infinite)
  &.small
    height 20px
    width 20px

  &.large
    height 70px
    width 70px

  &.thick
    border-width 6px

for t in themes
  .bz-spinner.{t}
    border-top-color: themes[t].fill

@keyframes bz-circle
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)