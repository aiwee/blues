<div class="bz-page-box bz-animate-left">
    <div class="bz-toolbar-box">

    </div>
    <div class="bz-title-box">
        <h1>{{title}}</h1>
    </div>
    <div class="bz-content-box">
        <div class="bz-box bz-block">
            <div class="bz-padding-16 bz-clearfix">
                <h5>Checkboxes</h5>
                <!-- start // markup for the element without injector  -->
                <label class="bz-checkbox">
                    <input id="chk" type="checkbox" name="chk" checked/>
                    <span class="outer">
            <span class="inner"></span>
        </span>
                    <span class="text">Checkbox 00</span>
                </label>
                <!-- end // -->
                <!-- start // markup for the element with injector  -->
                <input id="chk1" type="checkbox" name="chk1" class="bz-checkbox" data-label="Checkbox 01" checked/>
                <!-- end // -->
                <input id="chk2" type="checkbox" name="chk2" class="bz-checkbox" data-label="Checkbox 02" />
                <input id="chk3" type="checkbox" name="chk3" class="bz-checkbox" data-label="Checkbox 03" />
            </div>
            <div class="bz-padding-16 bz-clearfix">
                <h5>Radio Buttons</h5>
                <!-- start // markup for the element without injector  -->
                <label class="bz-radio">
                    <input id="radio0" type="radio" name="radios" />
                    <span class="outer">
            <span class="inner"></span>
        </span>
                    <span class="text">Radio 01</span>
                </label>
                <!-- end // -->
                <!-- start // markup for the element with injector  -->
                <input id="radio1" type="radio" name="radios" class="bz-radio" data-label="Radio 01" checked/>
                <!-- end // -->
                <input id="radio2" type="radio" name="radios" class="bz-radio" data-label="Radio 02" />
                <input id="radio3" type="radio" name="radios" class="bz-radio" data-label="Radio 03" />
            </div>
            <div class="bz-padding-16 bz-clearfix">
                <h5>Switchers/Toggles</h5>
                <!-- start // markup for the element without injector  -->
                <label class="bz-switch">
                    <input type="checkbox">
                    <span class="slider"></span>
                </label>
                <!-- end // -->
                <!-- start // markup for the element with injector  -->
                <input id="sw01" type="checkbox" class="bz-switch" checked>
                <!-- end // -->
                <input id="sw02" type="checkbox" class="bz-switch rounded">
                <input type="checkbox" class="bz-switch rounded" checked>
            </div>
            <div class="bz-padding-16 bz-clearfix">
                <h5>Selectors Inline</h5>
                <input id="chk11" type="checkbox" name="chk1" class="bz-checkbox" checked/>
                <input id="radio11" type="radio" name="radioss" class="bz-radio" checked/>
                <input id="radio12" type="radio" name="radioss" class="bz-radio" checked/>
                <input type="checkbox" class="bz-switch" checked>
            </div>
            <div class="bz-padding-16 bz-clearfix">
                <h5>Range Selector</h5>
                <div class="bz-padding-8">
                    <!-- start // markup for the element without injector  -->
                    <div class="bz-range-select">
                        <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                        <span class="text">Value: <span></span></span>
                    </div>
                    <!-- end // -->
                    </br>
                    <!-- start // markup for the element with injector  -->
                    <input type="range" class="bz-range-select" min="1" max="100" value="50" id="myRange2" data-value-name="Value">
                    <!-- end // -->
                </div>
            </div>
            <div class="bz-padding-16 bz-clearfix">
                <h5>Select</h5>
                <p>Select (injected)</p>
                <select id="injSelect" class="bz-droplist" data-name="Multiple select" multiple="true" data-search="true">
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="opel">Opel</option>
                    <option value="audi">Audi</option>
                    <option value="audi">Cadillac</option>
                    <option value="audi">Dodge</option>
                    <option value="audi">Ford</option>
                </select>
            </div>
            <div class="bz-padding-16 bz-clearfix" style="height:500px;">
                <h5>Drop Down List</h5>
                <p>Dropdown list with multiple selection</p>
                <form>
                    <div  class="bz-droplist" multiple="true" data-search="true">
                        <input type="hidden" id="droplist01">
                        <div class="bz-trigg">
                            <span class="text">Multiple select</span>
                            <i class="bz-flag"></i>
                        </div>
                        <div class="bz-ddl">
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="01" >
                                <div class="text">About</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="02" >
                                <div class="text">Terms</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="03" checked="checked" >
                                <div class="text">Policy</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="04" >
                                <div class="text">Questions</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="05" >
                                <div class="text">Support</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="06" >
                                <div class="text">Help</div>
                            </div>
                        </div>
                    </div>
                    <p>Dropdown list with single selection and search bar</p>
                    <div class="bz-droplist" data-search="true">
                        <input type="hidden" id="droplist02">
                        <div class="bz-trigg">
                            <span class="text">Select...</span>
                            <i class="bz-flag"></i>
                        </div>
                        <div class="bz-ddl">
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="01" checked="checked">
                                <div class="text">About</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="02" >
                                <div class="text">Terms</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="03"  >
                                <div class="text">Policy</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="04" >
                                <div class="text">Questions</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="05" >
                                <div class="text">Support</div>
                            </div>
                            <div class="bz-ddl-item" >
                                <input type="checkbox" class="bz-checkbox" name="06" >
                                <div class="text">Help</div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{#section 'scripts'}}
    <script src="../javascripts/bz-droplist.js"></script>
    <script type="text/javascript">
        (function() {
            // use method Droplist.all();
            // to init all droplists on the page with the same class
            // and the same options
            // to get droplist checked data
            // use method Droplist.data('#droplist01')
            // for better use #id as droplist identifier
            Droplist.init({
                selector: '#injSelect'
            });
            Droplist.init({
                selector: '#droplist01'
            });
            Droplist.init({
                selector: '#droplist02',
                calloncheck: function(selected, trigger) {
                    var t = trigger.find('.text');
                    t.inhtml('checked: ' + JSON.stringify(selected));
                },
                calluncheck: function(selected, trigger) {
                    var t = trigger.find('.text');
                    t.inhtml('checked: ' + JSON.stringify(selected));
                }
            });
            bzDom('#chk2').toggle(function() {
                alert('check on');
            }, function() {
                alert('check off');
            });
            bzDom('#sw01').toggle(function() {
                alert('switch on');
            }, function() {
                alert('switch off');
            });
            bzDom('#sw02').toggle(function() {
                alert('switch on');
            }, function() {
                alert('switch off');
            });
        })();
    </script>
{{/section}}