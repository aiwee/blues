                    <div class="tool">
                        <div class="back circle bz-wave"></div>
                        <i class="bzi-sign-out"></i>
                    </div>
                </div>

                <h6>HTML markup</h6>

                <div class="bz-padding-16">
        <textarea class="bz-code html">
            <div class="bz-toolbar">
                <div class="tool">
                    <div class="back circle"></div>
                    <i class="bzi-menu"></i>
                </div>
                    <div class="btn">
                    <div class="back bz-wave"></div>
                    <span class="text"><i class="bzi-envelope"></i> Inbox</span>
                </div>
                <div class="title">Title</div>
                <div class="tool">
                    <div class="back circle bz-wave"></div>
                    <i class="bzi-user"></i>
