<div class="bz-page-box bz-animate-left">
    <div class="bz-toolbar-box">

    </div>
    <div class="bz-title-box">
        <h1>{{title}}</h1>
    </div>
    <div class="bz-content-box">
        <div class="bz-block">
            <div class="bz-padding-16">
                <h5 class="bz-fc-primary">Spinners</h5>

                <div class="bz-row mb-middle">
                    <div class="bz-col mb6 tb4">
                        <p class="bz-fc-primary">
                            .bz-spinner.small
                        </p>
                    </div>
                    <div class="bz-col mb6 tb8">
                        <div class="bz-spinner small"></div>
                    </div>
                </div>
                <div class="bz-row mb-middle">
                    <div class="bz-col mb6 tb4">
                        <p class="bz-fc-primary">
                            .bz-spinner.primary
                        </p>
                    </div>
                    <div class="bz-col mb6 tb8">
                        <div class="bz-spinner primary"></div>
                    </div>
                </div>
                <div class="bz-row mb-middle">
                    <div class="bz-col mb6 tb4">
                        <p class="bz-fc-primary">
                            .bz-spinner.positive.large.thick
                        </p>
                    </div>
                    <div class="bz-col mb6 tb8">
                        <div class="bz-spinner positive large thick"></div>
                    </div>
                </div>

                <div class="bz-row mb-middle">
                    <div class="bz-col mb6 tb4">
                        <p class="bz-fc-primary">
                            JS Spinner
                        </p>
                    </div>
                    <div id="js-spinner" class="bz-col mb6 tb8"></div>
                </div>

                <div class="bz-row mb-middle">
                    <div class="bz-col mb6 tb4">
                        <p class="bz-fc-primary">
                            JS Spinner Primary Centered
                        </p>
                    </div>
                    <div id="js-spinner2" class="bz-col mb4 bz-relative bz-bc-gray-light" style="height: 200px;"></div>
                </div>

                <h6>HTML markup</h6>
                <textarea class="bz-code html">
                <div class="bz-spinner"></div>
                </textarea>
                <h5 class="bz-fc-primary">Centered spinners</h5>
                <div class="bz-padding-16 bz-margin-4 bz-bc-light bz-relative bz-inline-block" style="height: 200px; width: 200px;">
                    <div class="bz-center">
                        <div class="bz-spinner primary"></div>
                    </div>
                </div>
                <h6>or Javascript markup</h6>
                <textarea class="bz-code html">
                    <div id="js-spinner2" class="bz-relative"></div>
                    <script>
                        bz.addSpiner('#js-spinner2', { name: 'bz-spinner primary', size: 40, position: 'center' });
                    </script>
                </textarea>
                <h6>Loader with manual hide</h6>
                <div class="bz-padding-8 bz-clearfix">
                    <button id="spinbtn" class="bz-btn">
                        Start Loader
                    </button>

                    <button id="closespin" class="bz-btn">
                        Close Loader
                    </button>
                </div>
                <h6>Loader with timeout</h6>
                <div class="bz-padding-8 bz-clearfix">

                    <button id="spinbtn2" class="bz-btn">
                        Start Loader
                    </button>
                </div>
            </div>

            <div>
                <section>
                    <div class="loader loader-simple"></div>
                    Simple
                </section>
                <section>
                    <div class="loader loader-double"></div>
                    Double
                </section>
                <section>
                    <div class="loader loader-pulser"></div>
                    Pulser
                </section>
                <section>
                    <div class="loader loader-dot"></div>
                    Dot
                </section>
                <section>
                    <div class="loader loader-dots"></div>
                    Dots
                </section>
                <section>
                    <div class="loader loader-square"></div>
                    Square
                </section>
                <section>
                    <div class="loader loader-triple"></div>
                    Triple
                </section>
                <section>
                    <div class="loader loader-tetris"></div>
                    Tetris
                </section>
            </div>


        </div>
    </div>
</div>
{{#section 'scripts'}}
    <script>

        bz.addSpiner('#js-spinner', { size: 20 });
        bz.addSpiner('#js-spinner2', { name: 'bz-spinner negative thick', size: 60, position: 'center' });


        bzDom('#spinbtn').on('click', function() {
            bz.Loadspin('#spinbtn');
        });

        bzDom('#closespin').on('click', function() {
            bz.Loadspin.hide('#spinbtn');
        });

        bzDom('#spinbtn2').on('click', function() {
            bz.Loadspin('#spinbtn2', { timeout: 2000 });
        });

    </script>
{{/section}}